<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %> 
<body>
  <%- include('../partials/header') %>

    <main class="adminTab">

        <h1 class="edit">Listado de categorias</h1>
        <table class="list">
            <thead>
                <tr>
                    <th class="__id">id</th>
                    <th>Nombre</th>
                    <th>Edicion</th>
                </tr>
            </thead>

            <tbody>
                <% categorias.forEach(categoria => { %>
                    <tr class="productInfo"> 
                      <td> <strong> <%- categoria.id %> </strong> </td>
                      <td><%- categoria.name %></td>
                      <td class="editDelete">
                        <a href="/admin/categorias/editar/<%- categoria.id %>" >
                            <i class="fa-solid fa-pen-to-square"></i>
                        </a>
                        <form action="/admin/categorias/eliminar/<%- categoria.id %>?_method=DELETE" method="POST">
                          <button type="submit">
                            <i class="fa-solid fa-trash-can"></i>
                          </button>
                        </form>
                      </td>
                    </tr>
                  <% }) %> 
                
            </tbody>
            
        </table>

    </main>

    <%- include('../partials/footer') %>
    <%- include('../partials/script') %>
</body>
</html>